      <origin xyz="0 0 ${-ldr_height/2}" />
    </xacro:inertial_box>
  </link>

  <joint name="x-1_ldr_joint" type="fixed">
    <parent link="center_ldr_link" />
    <child link="x-1_ldr_link" />
    <origin xyz="0 0 ${-ldr_inter_offset}" />
  </joint>

  <link name="x-1_ldr_link">
