      z="${ldr_height}">
      <origin xyz="0 0 ${-ldr_height/2}" />
    </xacro:inertial_box>
  </link>

  <joint name="y-2_ldr_joint" type="fixed">
    <parent link="y-1_ldr_link" />
    <child link="y-2_ldr_link" />
