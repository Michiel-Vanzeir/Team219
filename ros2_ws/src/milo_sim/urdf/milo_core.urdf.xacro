    </visual>
    <collision>
      <geometry>
        <box size="${ldr_height} ${ldr_height} ${ldr_height}"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.001" x="${ldr_height}" y="${ldr_height}"
